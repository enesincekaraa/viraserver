{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=ViraDb;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "Vira.Api",
    "Audience": "Vira.Client",
    "AccessTokenMinutes": 30,
    "RefreshTokenDays": 7
    // Key burada YOK. User-Secrets'ta duruyor.
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
